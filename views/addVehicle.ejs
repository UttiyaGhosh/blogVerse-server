<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Vehicle Maintenance Log</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/styles/main.css" rel="stylesheet" />
  
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard"
          ><img src="/images/logo.png" class="logo"
        /></a>
        <div class="logout-link float-left me-3">
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </nav>
    <!-- NAVBAR -->

    <!-- ADD VEHICLE MAINTENANCE LOG FORM STARTS HERE -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h1 class="text-center">Add Vehicle Maintenance Log</h1>
          <hr class="my-4" />
          <form action="/cars/" method="post">

            <div class="row mb-3">
              <div class="col">
                <label for="logID" class="form-label">Log ID:</label>
                <input type="text" name="logID" class="form-control" required />
              </div>
              <div class="col">
                <label for="vehicleID" class="form-label">Vehicle ID:</label>
                <input
                  type="text"
                  name="vehicleID"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col">
                <label for="date" class="col-sm-3 col-form-label"
                  >Date:</label
                >
                <input type="date" name="date" class="form-control" required />
              </div>
              <div class="col">
                <label for="maintenanceType" class="col-sm-3 col-form-label"
                  >Maintenance Type:</label
                >
                <input
                  type="text"
                  name="maintenanceType"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col">
                <label for="cost" class="col-sm-3 col-form-label"
                  >Cost:</label
                >
                <input type="text" name="cost" class="form-control" required />
              </div>
              <div class="col">
                <label for="mechanicName" class="col-sm-3 col-form-label"
                  >Mechanic Name:</label
                >
                <input
                  type="text"
                  name="mechanicName"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col">
                <label for="serviceLocation" class="col-sm-3 col-form-label"
                  >Service Location:</label
                >
                <input
                  type="text"
                  name="serviceLocation"
                  class="form-control"
                  required
                />
              </div>
              <div class="col">
                <label for="partsReplaced" class="col-sm-3 col-form-label"
                  >Parts Replaced:</label
                >
                <input
                  type="text"
                  name="partsReplaced"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col">
                <label for="notes" class="col-sm-3 col-form-label"
                  >Notes:</label
                >
                <textarea
                  name="notes"
                  class="form-control"
                  rows="3"
                  required
                ></textarea>
              </div>
              <div class="col">
                <label for="nextServiceDate" class="col-sm-3 col-form-label"
                  >Next Service Date:</label
                >
                <input
                  type="date"
                  name="nextServiceDate"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Add Maintenance Log</button>
            </div>
            </form>
            </div>
            </div>
            </div>
            </body>
            
