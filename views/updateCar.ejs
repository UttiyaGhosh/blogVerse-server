<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Vehicle Maintenance Log</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/styles/main.css" rel="stylesheet" />
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard"
          ><img src="/images/logo.png" class="logo"
        /></a>
        <div class="logout-link float-left me-3">
          <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </nav>
    <!-- NAVBAR -->

    <!-- UPDATE VEHICLE MAINTENANCE LOG FORM STARTS HERE -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h1 class="text-center mb-4">Update Vehicle Maintenance Log</h1>
          <form action="/cars/update/<%= log._id %>" method="post">
            <div class="row mb-3">
              <div class="col-sm-6">
                <label for="date" class="col-form-label">Date:</label>
                <input
                  type="date"
                  name="date"
                  value="<%= log.date.toISOString().split('T')[0] %>"
                  class="form-control"
                  required
                />
              </div>
              <div class="col-sm-6">
                <label for="maintenanceType" class="col-form-label">Maintenance Type:</label>
                <input
                  type="text"
                  name="maintenanceType"
                  value="<%= log.maintenanceType %>"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-6">
                <label for="cost" class="col-form-label">Cost:</label>
                <input
                  type="number"
                  name="cost"
                  value="<%= log.cost %>"
                  class="form-control"
                  step="0.01"
                  required
                />
              </div>
              <div class="col-sm-6">
                <label for="mechanicName" class="col-form-label">Mechanic Name:</label>
                <input
                  type="text"
                  name="mechanicName"
                  value="<%= log.mechanicName %>"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-6">
                <label for="serviceLocation" class="col-form-label">Service Location:</label>
                <input
                  type="text"
                  name="serviceLocation"
                  value="<%= log.serviceLocation %>"
                  class="form-control"
                  required
                />
              </div>
              <div class="col-sm-6">
                <label for="partsReplaced" class="col-form-label">Parts Replaced:</label>
                <input
                  type="text"
                  name="partsReplaced"
                  value="<%= log.partsReplaced %>"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-6">
                <label for="notes" class="col-form-label">Notes:</label>
                <textarea
                  name="notes"
                  class="form-control"
                  rows="3"
                  required
                ><%= log.notes %></textarea>
              </div>
              <div class="col-sm-6">
                <label for="nextServiceDate" class="col-form-label">Next Service Date:</label>
                <input
                  type="date"
                  name="nextServiceDate"
                  value="<%= log.nextServiceDate.toISOString().split('T')[0] %>"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <button type="submit" class="btn btn-primary">Update Log</button>
          </form>
        </div>
      </div>
    </div>
    <!-- UPDATE VEHICLE MAINTENANCE LOG FORM ENDS HERE -->
  </body>
</html>
